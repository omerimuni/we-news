{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1>Edit article</h1>
        {{ form_start(articleForm) }}
            {{ form_row(articleForm.title, {
                label: 'Article title',
            }) }}
            {{ form_row(articleForm.short, {
                label: 'Short Description',
            }) }}
            {{ form_row(articleForm.content, {
                label: 'Content',
            }) }}

            {{ form_row(articleForm.categories, {
                label: 'Categories',
            }) }}
            {{ form_row(articleForm.picture, {
                label: 'Article image',
            }) }}
            <div class="form-group">
            {% if articleForm.vars.value.picture %}
                <img height="150px" src="{{ asset('uploads/') ~ articleForm.vars.value.picture }}">
            {% endif %}
            </div>
            
            <button type="submit" class="btn btn-primary">Save!</button>
            <a href="{{ path('editor_news') }}" class="btn btn-alert">Cancel!</a>
        {{ form_end(articleForm) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}