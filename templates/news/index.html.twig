{% extends 'base.html.twig' %}


{% block body %}
{% for key, by_group in news %}
<div class="section {{ cycle([' ', ' section-grey'], loop.index0) }}">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title">
          <h2><a href="{{ path('category', {category: key}) }}">{{ by_group.title }}</a></h2>
        </div>
      </div>
      {% for article in by_group.news %}
        <div class="col-md-4">
          <div class="post">
            <a class="post-img" href="{{ path('article', { article: article.id }) }}"><img src="{{ asset('uploads/') ~ article.picture }}" alt=""></a>
            <div class="post-body">
              <div class="post-meta">
                <span class="post-date">{{ article.publishedAt|date("M d, Y") }}</span>
              </div>
              <h3 class="post-title"><a href="{{ path('article', { article: article.id }) }}">{{ article.title }}</a></h3>
              <p>{{ article.short }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
      <div class="clearfix visible-md visible-lg"></div>
    </div>
  </div>
</div>
{% endfor %}
{% endblock %}